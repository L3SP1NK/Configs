##~~~~~~~~##
## Alias. ##
##~~~~~~~~##
## After Base zsh script.

## Add verbose mode.
alias cp='cp -v'
alias mv='mv -v'
alias rm='rm -v'
alias trash='trash -v'
alias mkdir="mkdir -v"
alias pip="pip -v"
alias pip3="pip3 -v"

## Add colors.
alias ls='ls --color=auto'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias diff='diff --color=auto'

## Custom.
alias l='ls --time-style="+%d-%m-%Y @ %T" -hAl'
alias unicode="cat ~/.unicode | tac"
alias c='ccze -A'
alias stopx='xfce4-session-logout -f -l'
alias s="xclip -selection clipboard"
alias disktemp="sudo hddtemp /dev/sd[a1..z9]|c"
alias phs="sudo python3 -m http.server 80"
alias make="make -j $(nproc)"
alias tren="trans -b -t en"
alias trfr="trans -b -t fr"
alias log="script -B ~/.term.log -aq"
alias rs="rsync -4 --archive --compress --compress-choice=zstd --compress-level=9 --force --group --ignore-errors --owner --progress --specials --times --update --verbose"
